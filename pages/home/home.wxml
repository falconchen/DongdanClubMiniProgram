<!--home.wxml-->
<wxs src="../../utils/util.wxs" module="util"></wxs>
<import src="/towxml/entry.wxml" />


<view class="container">
  <!-- <navigator url="/pages/daily/article?id=1800705">文章</navigator> -->
  <view wx:for="{{tweets}}" wx:key="index" class="item">
    
    <image class='avatar' src="{{item.portrait}}" bindtap="test"></image>
    
    <navigator class="tweet-area" hover-class='hover-body-link' hover-start-time='10' hover-stay-time='1000'  url="/pages/detail/detail?id={{item.id}}" 
 data-index="{{ index }}" bindtap="clickMe" data-id="{{item.id}}">
      <view class="tweet-header">
        <view class="author" hover-class='hover-white-link' hover-start-time='100' hover-stay-time='1000' bindtap='abc' url="/pages/author/author?id={{item.authorid}}">{{item.author}}</view>
        <text class="pubdate">{{ util.timeSince(item.pubDate) }}</text>
      </view>

      <view class="body2" bindtap="clickMe" data-id="{{item.id}}" data-index="{{ index }}" url="/pages/detail/detail?id={{item.id}}">
        <template is="entry" data="{{...item.body2}}" />
      </view>

      <view wx:if="{{item.thumbs}}" class="thumb-container">
        <block wx:for="{{tweets[index].thumbs}}" wx:for-index="tid" wx:key="idx" wx:for-item="thumb">
          <image catchtap="modalSubmit" class='thumb' src="{{thumb}}" data-src="{{tweets[index].bigImgs[tid]}}"></image>
        </block>
      </view>
      <view class="tweet-meta">
        <view class="reply">
          <text> {{item.commentCount}} </text>
          <label>{{tweets.index.author}}评 </label>
        </view>
      </view>
    </navigator>
  </view>
  
</view>

<include src="../template/modal-img.wxml" />
