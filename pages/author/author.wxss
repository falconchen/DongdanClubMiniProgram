/* pages/myself/myself.wxss */
.header{
  margin-bottom:20rpx;

}
.user-avatar-wrap {
  display: flex;
  justify-content:center;
  flex-direction: row;
  margin:40rpx 0 10rpx 0;
}

.user-avatar-wrap .user-avatar {
    height: 180rpx;
    width: 180rpx;
    border-radius: 50%;
    display:block; 
    overflow:hidden;
}

.header .author {
  display:block; 
  text-align: center;
}

.user-tabs{
  background-color:#f6f6f6;
  color:#ccc;
  padding:0;
  font-size:32rpx;
  font-weight:400;
  display:flex;
  flex-direction:row;

}

.user-tabs >view {
  flex:1;
  text-align: center;
  /* color:#ccc; */
  padding:16rpx; 
}

.user-tabs view.active {
  border-bottom: 4rpx solid #4eaa4c;
  color:#4eaa4c;
}

.user-avatar{
  background: #eee;
  width:180rpx;
  height:180rpx;
}

.signature{
  text-align:center;
  font-size:28rpx;
  padding:20rpx;
}
.author-char{
  font-size:75rpx;
  font-weight:bold;
  color:#fff;
 
}

@import '../template/modal-img.wxss';