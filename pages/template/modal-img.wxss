/* pages/home/home.wxss */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modal-img {
  width: 550rpx;
  /* height: 100%;  */
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  margin: 0rpx 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-img-loading {
  position: fixed;
  z-index: 9998;
  margin: 0rpx 100rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 150rpx;
  height: 150rpx;
  top: 30%;
  left: 200rpx;
  background: none;
}
